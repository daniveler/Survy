<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Home.HomeFragmentAlumno"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:id="@+id/linearLayoutHomeAlumno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:id="@+id/tvHolaHomeAlumno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:fontFamily="@font/poppins_semibold"
            android:text=""
            android:textColor="@color/white"
            android:textSize="44dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutAlumno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutHomeAlumno"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btMisAsignaturasHomeAlumno"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:background="@color/zxing_transparent"
            android:drawableRight="@drawable/ic_chevron_right_solid"
            android:fontFamily="@font/poppins"
            android:gravity="start|center_vertical"
            android:letterSpacing="0"
            android:text="Mis Asignaturas"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="32dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvMisAsignaturasHomeAlumno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="horizontal" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>