<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Preguntas.PreguntasFragmentProfesor"
    android:background="@drawable/gradient_background"
    >

    <TextView
        android:id="@+id/tvEmptyPreguntasProfesor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="@string/tvEmptyPreguntasProfesor"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="34dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPreguntasProfesor"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="32dp"
        app:layout_constraintBottom_toTopOf="@+id/btNuevaPreguntaPreguntasProfesor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEmptyPreguntasProfesor">

    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:id="@+id/btNuevaPreguntaPreguntasProfesor"
        android:layout_width="250dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/yellowButton"
        android:fontFamily="@font/poppins_semibold"
        android:letterSpacing="0"
        android:text="@string/btNuevaPreguntaPreguntasProfesor"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16dp"
        app:layout_constraintBottom_toTopOf="@+id/btCancelarPreguntasProfesor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/btCancelarPreguntasProfesor"
        android:layout_width="250dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/lightGray"
        android:fontFamily="@font/poppins_semibold"
        android:letterSpacing="0"
        android:text="@string/btCancelarPreguntasProfesor"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="48dp"/>






</androidx.constraintlayout.widget.ConstraintLayout>