<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".Authentication.RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/tvMainRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/registerTV1"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="44dp" />

        <Button
            android:id="@+id/btEmailRegister"
            android:layout_width="264dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginTop="64dp"
            android:backgroundTint="@color/lightPurple"
            android:drawableLeft="@drawable/ic_mail_solid"
            android:fontFamily="@font/poppins_semibold"
            android:letterSpacing="0"
            android:text="@string/registerMail"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="20dp"
            app:cornerRadius="8dp"
            app:strokeColor="@color/darkPurple"
            app:strokeWidth="2dp" />

        <Button
            android:id="@+id/btLoginMail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:background="?android:attr/selectableItemBackground"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/registerLogin"
            android:letterSpacing="0"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>