<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.MisAlumnos.BuscarAlumnoFragmentProfesor"
    android:background="@drawable/gradient_background">

    <SearchView
        android:id="@+id/searchViewBuscarAlumnosProfesor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/lightPurple"
        android:queryHint="@string/hintSearchViewMisAsignaturasProfesor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:searchIcon="@drawable/ic_magnifying_glass_solid"
        android:theme="@style/SearchViewAsignaturas"
        />

    <TextView
        android:id="@+id/tvEmptyBuscarAlumnoProfesor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:textSize="32dp"
        android:layout_marginTop="32dp"
        android:text="@string/tvEmptyAlumnos"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/searchViewBuscarAlumnosProfesor" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewBuscarAlumnoProfesor"
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEmptyBuscarAlumnoProfesor" />
</androidx.constraintlayout.widget.ConstraintLayout>