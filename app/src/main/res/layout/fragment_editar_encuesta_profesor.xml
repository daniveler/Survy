<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.MisEncuestas.Profesor.EditarEncuestaFragmentProfesor"
    android:background="@drawable/gradient_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <EditText
                android:id="@+id/etNombreEditarEncuestaProfesor"
                android:layout_width="264dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:background="@color/lightPurple"
                android:hint="Nombre"
                android:textColor="@color/black"
                android:visibility="visible" />

            <EditText
                android:id="@+id/etDescripcionEditarEncuestaProfesor"
                android:layout_width="264dp"
                android:layout_height="192dp"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:background="@color/lightPurple"
                android:ellipsize="end"
                android:gravity="start"
                android:hint="DescripciÃ³n"
                android:maxLines="10"
                android:text="@string/loremIpsunDescripcionEncuesta"
                android:textColor="@color/black"
                android:visibility="visible"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civIconoEditarEncuestaProfesor"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:clickable="true"
                android:src="@drawable/survy_logo"
                app:civ_border_color="@color/darkPurple"
                app:civ_border_width="2dp"
                app:civ_circle_background_color="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvIconosEditarEncuestaProfesor"
                android:layout_width="match_parent"
                android:layout_height="264dp"
                android:layout_marginTop="16dp"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                app:spanCount="3" />

            <Button
                android:id="@+id/btGuardarCambiosEditarEncuestaProfesor"
                android:layout_width="250dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:layout_marginTop="32dp"
                android:backgroundTint="@color/yellowButton"
                android:fontFamily="@font/poppins_semibold"
                android:letterSpacing="0"
                android:text="@string/btGuardarCambiosEditarAsignaturaProfesor"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:visibility="visible"

                />

            <Button
                android:id="@+id/btCancelarEditarEncuestaProfesor"
                android:layout_width="250dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="32dp"
                android:backgroundTint="@color/lightGray"
                android:fontFamily="@font/poppins_semibold"
                android:letterSpacing="0"
                android:text="@string/btCancelarNuevaAsignaturaProfesor"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:visibility="visible" />

            <Button
                android:id="@+id/btGuardarIconoEditarEncuestaProfesor"
                android:layout_width="250dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/yellowButton"
                android:fontFamily="@font/poppins_semibold"
                android:letterSpacing="0"
                android:text="@string/btGuardarIconoEditarAsignaturaProfesor"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btCancelarGuardarIconoEditarEncuestaProfesor"
                android:layout_width="250dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="32dp"
                android:backgroundTint="@color/lightGray"
                android:fontFamily="@font/poppins_semibold"
                android:letterSpacing="0"
                android:text="@string/btCancelarNuevaAsignaturaProfesor"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>