<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.MisAsignaturas.Alumno.MatricularAlumnoFragmentAlumno"
    android:background="@drawable/gradient_background">

    <TextView
        android:id="@+id/ttvMatricularAlumnoAlumno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/tvMatricularAlumnoAlumno"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.journeyapps.barcodescanner.BarcodeView
        android:id="@+id/bvMatricularAlumnoAlumno"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/ttvMatricularAlumnoAlumno"
        app:layout_constraintBottom_toTopOf="@+id/btIntroducirCodigoMatricularAlumnoAlumno"
        android:layout_marginBottom="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btIntroducirCodigoMatricularAlumnoAlumno"
        android:layout_width="250dp"
        android:layout_height="64dp"
        android:layout_gravity="center"
        android:backgroundTint="@color/yellowButton"
        android:fontFamily="@font/poppins_semibold"
        android:letterSpacing="0"
        android:text="@string/btModificarPerfil"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>