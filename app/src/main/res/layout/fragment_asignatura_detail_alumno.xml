<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.MisAsignaturas.Alumno.AsignaturaDetailFragmentAlumno"
    android:background="@drawable/gradient_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightPurple"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="36dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ivIconoAsignaturaDetailAlumno"
                    android:layout_width="264dp"
                    android:layout_height="264dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="32dp"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/tvNombreAsignaturaDetailAlumno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="28dp" />

                <TextView
                    android:id="@+id/tvCursoAsignaturaDetailAlumno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="28dp" />

                <Button
                    android:id="@+id/btVerEncuestasAsignaturaDetailAlumno"
                    android:layout_width="240dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="32dp"
                    android:backgroundTint="@color/yellowButton"
                    android:fontFamily="@font/poppins_semibold"
                    android:letterSpacing="0"
                    android:text="@string/btVerEncuestasAsignaturaDetailProfesor"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/btVerResultadosAsignaturaDetailAlumno"
                    android:layout_width="240dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/yellowButton"
                    android:fontFamily="@font/poppins_semibold"
                    android:letterSpacing="0"
                    android:text="@string/btVerResultadosEncuestaDetailAlumno"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/btCancelarAsignaturaDetailAlumno"
                    android:layout_width="240dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="32dp"
                    android:backgroundTint="@color/lightGray"
                    android:fontFamily="@font/poppins_semibold"
                    android:letterSpacing="0"
                    android:text="@string/btCancelarAsignaturaDetailProfesor"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16dp" />
            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>