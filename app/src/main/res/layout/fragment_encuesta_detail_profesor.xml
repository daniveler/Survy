<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.MisEncuestas.Profesor.EncuestaDetailFragmentProfesor"
    android:background="@drawable/gradient_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightPurple"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="36dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ivIconoEncuestaDetailProfesor"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="32dp"
                    android:background="@color/white" />

                <TextView
                    android:id="@+id/tvNombreEncuestaDetailProfesor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center"
                    android:text=""
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="28dp" />

                <ScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvDescripcionEncuestaDetailProfesor"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins"
                        android:justificationMode="inter_word"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:maxLines="8"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        />
                </ScrollView>


                <Button
                    android:id="@+id/btVerPreguntasEncuestaDetailProfesor"
                    android:layout_width="240dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="32dp"
                    android:backgroundTint="@color/yellowButton"
                    android:fontFamily="@font/poppins_semibold"
                    android:letterSpacing="0"
                    android:text="@string/btVerPreguntasEncuestaDetailProfesor"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/btVerResultadosEncuestaDetailProfesor"
                    android:layout_width="240dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/yellowButton"
                    android:fontFamily="@font/poppins_semibold"
                    android:letterSpacing="0"
                    android:text="@string/btVerResultadosEncuestaDetailProfesor"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/btEditarEncuestaDetailProfesor"
                    android:layout_width="240dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/yellowButton"
                    android:fontFamily="@font/poppins_semibold"
                    android:letterSpacing="0"
                    android:text="@string/btEditarEncuestaDetailProfesor"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <Button
                    android:id="@+id/btCancelarEncuestaDetailProfesor"
                    android:layout_width="240dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="32dp"
                    android:backgroundTint="@color/lightGray"
                    android:fontFamily="@font/poppins_semibold"
                    android:letterSpacing="0"
                    android:text="@string/btCancelarEncuestaDetailProfesor"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16dp" />
            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>